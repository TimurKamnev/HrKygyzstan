@page
@model IndexModel
@{
    ViewData["Title"] = "Customize your profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}


<partial name="_StatusMessage" for="StatusMessage" />
<body class="page-no-footer">
    <div class="row ">
        <div class="col-md-6">
            <h4 class="text-white">@ViewData["Title"] </h4>
            <br />
            <form id="profile-form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Username" class="form-control editAccountInput" disabled />
                    <label asp-for="Username" class="form-label"></label>
                </div>
                <br />
                <div class="form-floating">
                    <input asp-for="Input.PhoneNumber" class="form-control editAccountInput fieldPriv" />
                    <label asp-for="Input.PhoneNumber" class="form-label"></label>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <br />
                <button id="body-btn" type="submit" class="w-100 btn btn-lg btn-primary-1 text-white">Save</button>
            </form>
        </div>
    </div>
</body>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
