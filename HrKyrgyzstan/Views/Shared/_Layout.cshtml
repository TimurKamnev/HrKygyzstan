                            <li class="nav-item navigation">
                                <a class="nav-link text-white" id="manage" asp-area="" asp-controller="User"
                                    asp-action="Index">Users</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>

        <div class="johnWick search-bar">
            <button type="button" class="btnSearch" data-bs-toggle="modal" data-bs-target="#searchModal">
                <i class='bx bx-search-alt-2' autocomplete="on"></i>
            </button>
            <partial name="_LoginPartial" />
        </div>

        <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    </header>


